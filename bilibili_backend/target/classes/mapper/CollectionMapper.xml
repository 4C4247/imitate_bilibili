<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.bilibili.mapper.CollectionMapper">

    <!-- 根据用户ID查询收藏列表 -->
    <select id="selectByUserId" resultType="com.example.bilibili.entity.VideoCollection">
        SELECT * FROM collection WHERE user_id = #{userId} ORDER BY create_time DESC
    </select>

    <!-- 根据用户ID和视频ID查询收藏 -->
    <select id="selectByUserIdAndVideoId" resultType="com.example.bilibili.entity.VideoCollection">
        SELECT * FROM collection WHERE user_id = #{userId} AND video_id = #{videoId}
    </select>

</mapper>